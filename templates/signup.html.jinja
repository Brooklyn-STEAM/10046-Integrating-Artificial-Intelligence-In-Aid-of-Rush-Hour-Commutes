<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>


        body {
            background: linear-gradient(200deg, #BCB8A6, #F2F0E6);
            min-height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
        }
        .card {
            border: 2px solid #000000;
            border-radius: 10px;
            padding: 40px;
            width: 600px;
            position: relative; 

        }
        .form-container {
            margin-top: 50px;
        }
        .create-account-link {
            text-align: center;
            margin-top: 20px; 
        }

        .button {
            color:darkorchid
        }

         #showPasswordBtn {
            position:absolute;
            right: 20px;
            background: white;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3;
        }

        #showPasswordBtn i {
            font-size: 1.5em;
            color: #075299;
        }
    </style>
</head>
<body>
{% include "components/navbar2.html.jinja" %}


    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="card p-4 shadow bg-white" style="max-width: 400px;">
            <h1 class="text-center mb-4">Sign Up</h1>

            {% for message in get_flashed_messages() %}
                <div class="alert alert-primary" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            <form action="/signup" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email" required>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" name="username" id="username" placeholder="Enter a Username" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
                </div>

                <div class="mb-3">
                    <label for="confirm-password" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" name="confirm-password" id="confirm-password" placeholder="Confirm Password" required>
                    <button type="button" id="showPasswordBtn" onclick="togglePassword()" aria-label="Toggle password visibility">
                    <i data-lucide="eye"></i>
                    </button>
                </div>

                <button type="submit" class="btn btn-dark w-100">Sign Up</button>
            </form>
            <div class="create-account-link">
                <a href="/signin">Already have an account? Sign in here</a>
            </div>
        </div>
    </div>

<script>
    function togglePassword() {
    const passwordInput = document.getElementById('confirm-password');
    const eyeIcon = document.querySelector('#showPasswordBtn i');

    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.setAttribute('data-lucide', 'eye-off'); 
    } else {
        passwordInput.type = 'password'; 
        eyeIcon.setAttribute('data-lucide', 'eye'); 
    }

    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
} 
            
 
</script>

<script src="https://unpkg.com/lucide@latest"></script>
  <script>
    lucide.createIcons();
  </script>
</body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>